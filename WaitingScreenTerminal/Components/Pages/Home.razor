@page "/"
@namespace Pages
@using Models
@inherits HomeBase


<div class="console-container">
    
    <div id="console" class="console">
        
        @foreach (LogLine logLine in LogLines)
        {
            <div class="log-line">
                <span class="log-line__timestamp">[@logLine.Timestamp]</span>
                <span class="log-line__level @(GetLevelClass(logLine.Level))">@(GetLevelTag(logLine.Level)):</span>
                <span class="log-line__msg">@logLine.Message</span>
            </div>
            
            <VerticalSpacer Value="8"/>
        }

        <span class="cursor"></span>

    </div>
    
</div>
